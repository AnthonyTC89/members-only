<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <% if logged_in? %>
        <th>User</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <% if logged_in? %>
            <td><%= User.find(post.user_id).name %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
